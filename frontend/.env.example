# Frontend Environment Variables Example
# These are typically set in docker-compose.yml or .env file
# Variables must start with REACT_APP_ to be accessible in React

# Bearer token for API authentication (must match backend)
REACT_APP_BEARER_TOKEN="Bearer AIzaSyD8Z0jJ9Q9Q6Z2MaSKLNSD2jkmsasdnk"

# API URL - Leave empty for automatic detection based on browser location
# Set explicitly only if using reverse proxy or custom configuration
# Example: REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_URL=

# Backend port - Used for auto-detection when API_URL is not set
REACT_APP_BACKEND_PORT=3001

# Login credentials
REACT_APP_USERNAME="admin"
REACT_APP_PASSWORD="Hello123!"

# Enable file watching in Docker (required for hot reload)
CHOKIDAR_USEPOLLING=true
